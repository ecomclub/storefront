<%
const contacts = _.cms('contacts') || {}
const settings = _.cms('settings') || {}
const footer = _.cms('footer') || {}
const paymentMethods = [
  'boleto',
  'visa',
  'mastercard',
  'elo',
  'amex',
  'hipercard',
  'hiper',
  'diners',
  'aura',
  'itau',
  'bradesco',
  'bb',
  'santander',
  'citibank',
  'hsbc',
  'banrisul',
  'mais'
]
// store logo object
const logo = _.settings.logo
  ? { url: _.settings.logo, alt: _.settings.name }
  : _.store.logo
%>

<div class="app">
  <header class="app__header">
    <div class="container d-flex align-items-center">
      <div class="row col-md-12">
        <div class="app__logo-position d-flex col col-md-3">
          <a href="/">
            <% if (logo && logo.url) { %>
                  <img class="app__logo" src="<%= logo.url %>" alt="<%= logo.alt %>">
            <% } else { %>
              <%= _.settings.name || _.store.name %>
            <% } %>
          </a>
        </div>
        <div class="app__contact col-md-5 d-flex align-items-center">
          Dúvidas? Ligue
          <% if (contacts.whatsapp) { %>
            <span
              class="whatsapp-link font-weight-normal pl-1"
            >
              <%= contacts.whatsapp %>
            </span>
          <% } %>
          <% if (contacts.phone) { %>
            /<span
              class="font-weight-normal pl-1"
            >
              <%= contacts.phone %>
            </span>
          <% } %>
        </div>
        <div class="app__safe-icon d-flex align-items-center col col-md-4 justify-content-end">
          <span class="app__icon-shield">
            <i class="fas fa-shield-alt"></i>
          </span>
          <span class="app__safe-icon-text pl-2">Ambiente 100% Seguro</span>
        </div>
      </div>
    </div>
  </header>

  <div id="spa">
    <div id="storefront-app"></div>
  </div>

  <footer class="app__footer">
    <div class="container">
      <div class="row">
        <div class="app__footer__payment col-12 col-md-6 pt-2 pb-2 d-flex align-items-center">
          <ul class="app__footer__payment__methods">
            <% paymentMethods.forEach(method => { %>
              <% if (footer.payment_methods[method]) { %>
                <li class="<%= method %>">
                  <i class="pay-icon pay-icon--<%= method %>"></i>
                </li>
              <% } %>
            <% }) %>
          </ul>
        </div>
        <div class="app__footer__stamp col-12 col-md-6 pt-2 pb-2 d-flex align-items-center">
          <% footer.stamps.forEach(({ src, alt, link }) => { %>
            <ul class="app__footer__stamp__checkout">
              <% if (link) { %>
                <li>
                  <a
                    href="<%= link %>"
                    target="_blank"
                    rel="noopener"
                    >
                    <img src="<%= src %>" alt="<%= alt %>">
                  </a>
                </li>
              <% } else { %>
                <li>
                  <img src="<%= src %>" alt="<%= alt %>">
                </li>
              <% } %>
            </ul>
          <% }) %>
        </div>
      </div>
    </div>
  </footer>

  <div class="d-flex">
    <div class="app__info col-12">
      <% if (footer.credits) { %>
        <span><%= footer.credits %></span>
      <% } else { %>
        <span class="app__credits__name">© <%= settings.name %></span> |
        <span class="app__credits__address"><%= contacts.address %></span> |
        <span class="app__credits__doc-number"><%= contacts.doc_number %></span>
      <% } %>
    </div>
    <div class="ecom-credits pl-5">
      <a href="https://e-com.plus" target="_blank" rel="noopener">
        Powered by
        <img
          src="https://ecom.nyc3.digitaloceanspaces.com/brand/plus/198x43.png"
          alt="E-Com Plus"
        >
      </a>
    </div>
  </div>
</div>
