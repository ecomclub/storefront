<section class="products-carousel" data-size="4" data-slideout-ignore="" data-title="Produtos populares"
  data-cms-if="home.<%= opt.showcaseType %>" data-cms-default="true" style="display: none;">
  <h4 class="products-carousel__title">
    <a href="/search"><%= opt.title %></a>
  </h4>
  <div class="glide glide--ltr glide--slider glide--swipeable">
    <div class="glide__track" data-glide-el="track">
      <ul class="glide__slides products-carousel__list"
        style="transition: transform 400ms cubic-bezier(0.165, 0.84, 0.44, 1) 0s; width: 1110px; transform: translate3d(0px, 0px, 0px);">
        <% for (let i = 0; i < 4; i++) { %>
        <li class="glide__slide products-carousel__item glide__slide--active" style="width: 270px; margin-right: 5px;">
          <article>
            <div class="ec-product-card product-card">
              <section>
                <a href="/oculos" title="Óculos" class="ec-product-card__link">
                  <div class="ec-product-card__pictures">
                    <div class="ec-image ec-product-card__picture">
                      <picture
                        data-iesrc="https://ecom-iblwbssm.sfo2.digitaloceanspaces.com/imgs/400px/@1568320190220-glass.png"
                        data-alt="glass" class="lozad fade show" data-loaded="true">
                        <source
                          srcset="https://ecom-iblwbssm.sfo2.digitaloceanspaces.com/imgs/100px/@1568320190220-glass.png"
                          media="(max-width: 299.98px)">
                        <source
                          srcset="https://ecom-iblwbssm.sfo2.digitaloceanspaces.com/imgs/400px/@1568320190220-glass.png"
                          media="(min-width: 300px)"><img alt="glass"></picture>
                    </div>
                  </div>
                  <h3 class="ec-product-card__name"> Óculos </h3>
                </a>
                <div class="ec-prices ec-product-card__prices">
                  <strong class="ec-prices__value"> R$&nbsp;150,00 </strong>
                  <span></span>
                </div>
                <div class="ec-product-card__buy fade">
                  <button type="button" class="btn btn-block btn-primary">
                    <svg class="svg-inline--fa fa-shopping-bag fa-w-14 mr-1" aria-hidden="true" focusable="false"
                      data-prefix="fas" data-icon="shopping-bag" role="img" xmlns="http://www.w3.org/2000/svg"
                      viewBox="0 0 448 512" data-fa-i2svg="">
                      <path fill="currentColor"
                        d="M352 160v-32C352 57.42 294.579 0 224 0 153.42 0 96 57.42 96 128v32H0v272c0 44.183 35.817 80 80 80h288c44.183 0 80-35.817 80-80V160h-96zm-192-32c0-35.29 28.71-64 64-64s64 28.71 64 64v32H160v-32zm160 120c-13.255 0-24-10.745-24-24s10.745-24 24-24 24 10.745 24 24-10.745 24-24 24zm-192 0c-13.255 0-24-10.745-24-24s10.745-24 24-24 24 10.745 24 24-10.745 24-24 24z">
                      </path>
                    </svg> Comprar </button>
                </div>
              </section>
            </div>
          </article>
        </li>
        <% } %>
      </ul>
    </div>
</section>