<% if (Array.isArray(opt.slides) && opt.slides.length) { %>
  <section class="banner-slider" data-cms-if="home.slider">
    <div class="glide" data-autoplay="<%= opt.autoplay %>">
      <div class="glide__track" data-glide-el="track">
        <ul class="glide__slides banner-slider__slides">
          <% opt.slides.forEach(({ link, img, alt }) => { %>
            <li class="glide__slide">
              <a href="<%= link %>" class="d-block">
                <img
                  class="lozad fade img-fluid"
                  data-<%- _.attrs.imgSrc(img) %>
                  alt="<%= alt %>"
                >
              </a>
            </li>
          <% }) %>
        </ul>

        <% if (opt.slides.length > 1) { %>
          <div class="glide__arrows d-none d-md-block" data-glide-el="controls">
            <button
              class="btn glide__arrow glide__arrow--left"
              data-glide-dir="<"
              aria-label="Arrow left"
            >
              <i class="fas fa-chevron-left"></i>
            </button>
            <button
              class="btn glide__arrow glide__arrow--right"
              data-glide-dir=">"
              aria-label="Arrow right"
            >
              <i class="fas fa-chevron-right"></i>
            </button>
          </div>

          <div class="glide__bullets" data-glide-el="controls[nav]">
            <% opt.slides.forEach((_, index) => { %>
              <button class="glide__bullet" data-glide-dir="=<%= index %>" aria-label="Glide bullet"></button>
            <% }) %>
          </div>
        <% } %>
      </div>
    </div>
  </section>
<% } %>
